@using Final_web_app.ViewModels;
@model Portfolio_inquiryViewModel;
@{
    ViewData["Title"] = "Portfolio";
}


<html>
    <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ViewData["Title"] - Filmiah</title>

    <link rel="stylesheet" href="~/css/Portfolio_pagee.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet" />
    </head>
    <body>
        <div class="form-container">
            <div class="form-img">
                <img src="~/images/cham.jpg" alt="Your Image" class="cham">
            </div>
            <div class="form">
                <h4>Contact Us</h4>
                <h1>Get in touch with us!</h1>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }

                <div asp-validation-summary="All" class="text-danger"></div>

                <form asp-action="Portfolio_inquiry" method="post">
                    <input asp-for="Name" type="text" placeholder="Your Name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>

                    <input asp-for="Email" type="email" placeholder="Your Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <input asp-for="Phone" type="tel" placeholder="Your Phone Number" />
                    <span asp-validation-for="Phone" class="text-danger"></span>

                    <textarea asp-for="Message" placeholder="Your Message" rows="4" required></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>

                    <button type="submit">Send Message</button>
                </form>
            </div>
        </div>

 
        <section class="about-section" id="MoreAboutUs">
            <div class="about-container">
                <div class="image-container">
                    <img src="~/images/rizz.jpg" alt="ate_rizz">
                </div>
                <div class="text-container">
                    <h4>FILMIAH studio's</h4>
                    <h1>Learn More About Us</h1>
                    <p>
                        At Filmiah Studio, we transform visions into captivating visual experiences. Our team of skilled photographers, videographers, and creatives are passionate about telling unique stories through the lens. From personal projects to corporate productions, we specialize in crafting high-quality visuals that resonate with audiences. Whether you're seeking stunning photos, cinematic videos, or an entire production package, Filmara Studio offers a professional, personalized approach that brings your ideas to life with creativity and precision.
                    </p>
                    <a href="https://www.facebook.com/profile.php?id=100069805509083" target="_blank"><button class="learn-more-btn">LEARN MORE</button></a>
                </div>
            </div>
        </section>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
</body>

</html>